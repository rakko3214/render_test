<div class="container">
    <div class="col-md-10 col-lg-8 mx-auto mt-8 justify-items-center">
      <h1>ユーザー登録</h1>
      <%= form_with model: @user do |f| %>
        <div class="mb-3">
          <%= f.label :ニックネーム, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :name, class: "border border-gray-300 rounded-md p-2 w-full" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.email_field :email, class: "border border-gray-300 rounded-md p-2 w-full" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password, class: "border border-gray-300 rounded-md p-2 w-full" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, class: "fblock text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password_confirmation, class: "border border-gray-300 rounded-md p-2 w-full" %>
        </div>
        <%= f.submit "登録", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
      <div class='text-center'>
        <%= link_to 'ログインページへ', login_path %>
      </div>
    </div>
  </div>
</div>